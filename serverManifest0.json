{
  "server": {
    "app": {
      "$filter": "env",
      "development": {
        "client": "http://localhost:3004",
        "api": "http://localhost:3003",
        "isDevelopment": true,
        "uploadDir": "./uploads"
      },
      "staging": {
        "client": "http://pure-beyond-73225.herokuapp.com",
        "api": "http://localhost:80",
        "isDevelopment": false,
        "uploadDir": "./uploads"
      }
    },
    "cache": "../node_modules/catbox-mongodb"
  },
  "connections": {
    "$filter": "env",
    "$default": [{
      "port": 3003,
      "labels": ["api"],
      "routes": {
        "cors": true
      }
    }],
    "staging": [{
      "port": 80,
      "labels": ["api"],
      "routes": {
        "cors": true
      }
    }]
  },
  "registrations": {
    "$filter": "env",
    "$base": [{
      "plugin": {
        "register": "good",
        "options": {
          "ops": {
            "interval": 30000
          },
          "reporters": {
            "console": [{
              "module": "good-squeeze",
              "name": "Squeeze",
              "args": [{ "log": "*", "request": "*", "response": "*", "error": "*", "ops": "*" }]
            }, {
              "module": "good-console"
            }, "stdout"],
            "file": [{
              "module": "good-squeeze",
              "name": "Squeeze",
              "args": [{ "error": "*" }]
            }, {
              "module": "good-squeeze",
              "name": "SafeJson"
            }, {
              "module": "good-file",
              "args": ["./logs/errors"]
            }]
          }
        }
      }
    }, {
      "plugin": {
        "register": "nes"
      }
    }, {
      "plugin": {
        "register": "hapi-boom-decorators"
      }
    }, {
      "plugin": {
        "register": "scooter"
      }
    }, {
      "plugin": "./core"
    }, {
      "plugin": {
        "register": "./storage",
        "options": {
          "mongoDb" : {
            "db": "net-alignment"
          }
        }
      }
    }, {
      "plugin": {
        "register": "./crud"
      }
    }, {
      "plugin": {
        "register": "./mailer",
        "routes": {
          "prefix": "/emails"
        },
        "options": {
          "transport": {
            "host": "mailtrap.io",
            "port": 2525,
            "auth": {
            }
          },
          "saveToDisk": true,
          "emailsDir": "./emails"
        }
      }
    }, {
      "plugin": {
        "register": "bell"
      }
    }, {
      "plugin": {
        "register": "./user",
        "options": {
          "jwt": {
            "key": "I83At3WR1FaPTVOObwDWtXP19JucJWBmLLvT3K7XczEIcELzcrB1OyARV1Hs5z1"
          },
          "socialPlatforms": {
          }
        }
      }
    }, {
      "plugin": {
        "register": "./filesManager",
        "options": {
          "uploadDir": "./uploads"
        },
        "routes": {
          "prefix": "/files"
        }
      }
    }, {
      "plugin": {
        "register": "./loan",
        "routes": {
          "prefix": "/loans"
        }
      }
    }],
    "$default": [],
    "development": [{
      "plugin": {
        "register": "./documentation"
      }
    }, {
      "plugin": {
        "register": "./monitoring"
      }
    }],
    "staging": [{
      "plugin": {
        "register": "./documentation"
      }
    }, {
      "plugin": {
        "register": "./monitoring"
      }
    }]
  }
}
